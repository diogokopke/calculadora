    <div class="container">
        <h2>Calculadora de Calorias do Programa Transforma√ß√£o</h2>
        
        <label for="sexo">Sexo:</label>
        <select id="sexo">
            <option value="masculino">Masculino</option>
            <option value="feminino">Feminino</option>
        </select>

        <label for="peso">Peso (kg):</label>
        <input type="number" id="peso" placeholder="Ex: 80">

        <label for="altura">Altura (cm):</label>
        <input type="number" id="altura" placeholder="Ex: 175">

        <label for="idade">Idade:</label>
        <input type="number" id="idade" placeholder="Ex: 30">

        <label for="atividade">N√≠vel de Atividade:</label>
        <select id="atividade">
            <option value="1.2">Sedent√°rio (quase sem exerc√≠cio)</option>
            <option value="1.375">Pouco ativo (1-3 treinos/semana)</option>
            <option value="1.55">Moderado (3-5 treinos/semana)</option>
            <option value="1.725">Muito ativo (6-7 treinos/semana)</option>
            <option value="1.9">Extremamente ativo (atleta ou trabalho pesado)</option>
        </select>

        <button onclick="calcularCalorias()">Calcular</button>

        <div class="resultado" id="resultado"></div>
    </div>

    <script>
        function calcularCalorias() {
            let sexo = document.getElementById("sexo").value;
            let peso = parseFloat(document.getElementById("peso").value);
            let altura = parseFloat(document.getElementById("altura").value);
            let idade = parseInt(document.getElementById("idade").value);
            let atividade = parseFloat(document.getElementById("atividade").value);

            if (isNaN(peso) || isNaN(altura) || isNaN(idade)) {
                document.getElementById("resultado").innerHTML = "‚ö†Ô∏è Por favor, preenche todos os campos corretamente.";
                document.getElementById("resultado").style.display = "block";
                document.getElementById("resultado").style.background = "#dc3545"; /* Vermelho de alerta */
                return;
            }

            let tmb;
            if (sexo === "masculino") {
                tmb = (10 * peso) + (6.25 * altura) - (5 * idade) + 5;
            } else {
                tmb = (10 * peso) + (6.25 * altura) - (5 * idade) - 161;
            }

            let tmt = tmb * atividade;

            let emagrecer = tmt - 300;
            let ganhar = tmt + 300;

            document.getElementById("resultado").innerHTML = `
                <p>üìå <strong>Metabolismo Basal (TMB):</strong> ${Math.round(tmb)} kcal</p>
                <p>üî• <strong>Gasto di√°rio total:</strong> ${Math.round(tmt)} kcal</p>
                <p>‚öñÔ∏è <strong>Para emagrecer:</strong> entre ${Math.round(emagrecer)} e ${Math.round(emagrecer - 200)} kcal</p>
                <p>üí™ <strong>Para ganhar peso:</strong> entre ${Math.round(ganhar)} e ${Math.round(ganhar + 200)} kcal</p>
            `;
            document.getElementById("resultado").style.display = "block";
            document.getElementById("resultado").style.background = "#28a745"; /* Verde */
        }
    </script>

